<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppProgressDialogTheme" parent="AppDialogTheme">
        <item name="android:windowBackground">@color/progress_dialog_bg</item>
    </style>

    <style name="AppExcuteDialogTheme" parent="AppDialogTheme">
        <item name="android:windowBackground">@color/excute_dialog_bg</item>
    </style>

    <style name="text_12_333333">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#ff333333</item>
    </style>

    <style name="text_14_333333">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ff333333</item>
    </style>

    <style name="text_14_808080">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ff808080</item>
    </style>

    <style name="text_14_ffffff">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="text_15_333333">
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!--  自定义对话框的-->
    <style name="MySimpleDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">#00000000</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>
